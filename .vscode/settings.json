{
  "tailwindCSS.experimental.configFile": "packages/ui/src/styles.css",
  // allow autocomplete for ArkType expressions like "string | num"
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "files.watcherExclude": {
    "**/routeTree.gen.ts": true,
    "**/orpc-contract.json": true
  },
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true,
    "**/orpc-contract.json": true
  },
  "search.exclude": {
    "**/routeTree.gen.ts": true,
    "**/orpc-contract.json": true
  },
  "typescript.preferences.autoImportSpecifierExcludeRegexes": [
    // prioritize ArkType's "type" for autoimports
    "^(node:)?os$",
    // prioritize our own env for autoimports
    "^(node:)?process$"
  ],
  "cSpell.words": [
    "apify",
    "arktype",
    "backlink",
    "Backlinks",
    "crawlee",
    "Creds",
    "DATAFORSEO",
    "defuddle",
    "dofollow",
    "dotenvx",
    "fumadocs",
    "inboundemail",
    "Jina",
    "listicle",
    "metas",
    "millis",
    "oklch",
    "orpc",
    "rectangularlabs",
    "Satoshi's",
    "Scaleway",
    "searchconsole",
    "serp",
    "simplewebauthn",
    "Solana",
    "Sonner",
    "totp",
    "turso",
    "Unlazied",
    "upserted",
    "uuidv",
    "webauthn"
  ]
}
