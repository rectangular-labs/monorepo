{
  "name": "@rectangular-labs/core",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "exports": {
    "./format/*": {
      "types": "./dist/format/*.d.ts",
      "default": "./src/format/*.ts"
    },
    "./schemas/*": {
      "types": "./dist/schemas/*.d.ts",
      "default": "./src/schemas/*.ts"
    },
    "./project/*": {
      "types": "./dist/lib/project/*.d.ts",
      "default": "./src/lib/project/*.ts"
    },
    "./workspace/*": {
      "types": "./dist/lib/workspace/*.d.ts",
      "default": "./src/lib/workspace/*.ts"
    },
    "./loro-file-system": {
      "types": "./dist/lib/loro-file-system/index.d.ts",
      "default": "./src/lib/loro-file-system/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc",
    "clean": "git clean -xdf .turbo node_modules dist .cache",
    "format": "bun x @biomejs/biome format . --write",
    "lint": "bun x @biomejs/biome lint . --write",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "devDependencies": {
    "@rectangular-labs/typescript": "workspace:*",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@rectangular-labs/loro-file-system": "workspace:*",
    "arktype": "^2.1.27",
    "loro-crdt": "^1.10.0"
  }
}
