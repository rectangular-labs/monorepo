{
  "name": "rectangular-labs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:preview": "turbo build:preview",
    "build:production": "turbo build:production",
    "changeset": "changeset",
    "changeset:release": "bun run build && changeset publish",
    "clean": "git clean -xdf node_modules .turbo .sst",
    "clean:workspaces": "turbo clean",
    "db:mg": "bun run --filter @rectangular-labs/db  migrate-generate",
    "db:mp": "bun run --filter @rectangular-labs/db  migrate-push",
    "db:push": "bun run --filter @rectangular-labs/db push --force",
    "db:studio": "bun run --filter @rectangular-labs/db studio",
    "emails:create": "bun run --filter @rectangular-labs/emails create",
    "emails:preview": "bun run --filter @rectangular-labs/emails preview",
    "emails:check": "bun run --filter @rectangular-labs/emails check",
    "dev": "docker compose up -d && pnpm with-env turbo run dev",
    "env:get": "bun x dotenvx get",
    "env:set": "bun x dotenvx set",
    "env:encrypt": "bun x dotenvx encrypt",
    "format": "turbo run format --continue",
    "lint": "turbo run lint --continue",
    "new:package": "turbo gen package",
    "postinstall": "bun x sherif@latest",
    "typecheck": "turbo run typecheck --continue",
    "ui:add": "cd ./packages/ui && bun run ui-add && cd ../..",
    "sso": "aws sso login --sso-session=rectangular-labs",
    "with-env": "dotenvx run  -f .env -- "
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@changesets/cli": "^2.29.6",
    "@dotenvx/dotenvx": "^1.49.0",
    "@rectangular-labs/typescript": "workspace:*",
    "@turbo/gen": "^2.5.6",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.1"
}
